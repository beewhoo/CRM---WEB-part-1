<h3>Edit Contact</h3>

<form action='/contacts/<%= @contact.id %>' method='post'>

  <input type='hidden' name='_method' value='put'>

  <p><label for="first_name"> First name</label></p>
  <input id="first_name" type='text' name='first_name' value='<%= @contact.first_name %>'>

  <p><label for="last_name"> Last name</label></p>
  <input id="last_name" type='text' name='last_name' value='<%= @contact.last_name %>'>

  <p><label for="email"> Email</label></p>
  <input id="email" type='text' name='email' value='<%= @contact.email %>'>

  <p><label for="note"> Notes</label></p>
  <input id="note" type='text' name='note' value='<%= @contact.note %>'>

  <input type='submit' value='Edit Contact'>

</form>
